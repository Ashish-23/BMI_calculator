
import 'dart:math';

class CalculatorBrain{
  CalculatorBrain({ this.height, this.weight,});
 final int height;
 final int weight;
 double _bmi;
 String calculateBMI(){
     _bmi=weight / pow(height/100, 2);
    return _bmi.toStringAsFixed(1);
  }
  String getResult(){
   if(_bmi >= 25.0){
     return 'OverWeight';
   }
   else if(_bmi<18.5){
     return 'UnderWeight';
   }
   else{
     return 'Normal';
   }
  }

  String getInterpretation(){
    if(_bmi>=25){
      return 'You have higher than the normal body weight, Try to exercise more';
    }
    else if(_bmi<18){
      return 'You have lower than the normal body weight, You can eat a bit more';
    }
    else{
      return 'You have norml body weight, keep doing normal exercise';
    }

  }


}